# Environment Variables

# Google Gemini API Key (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Timing Configuration (adjusted for free tier: 5 RPM, 20 RPD)
API_CALL_DELAY=15.0
URL_TIMEOUT=3
GEMINI_TIMEOUT=30
MAX_RETRIES=2

# Quality Thresholds
MIN_CONFIDENCE=0.5
HIGH_VARIANCE=1.5

# Limits (conservative for free tier)
MAX_IMAGES=3
MAX_CONCURRENT=5

# Model Selection
GEMINI_MODEL=gemini-2.5-flash

# Server Configuration (Optional)
# HOST=0.0.0.0
# PORT=8000
